# 智游助手v6.52-preview 环境变量配置示例
# 复制此文件为 .env.local 并填入真实的API密钥

# 应用基础配置
NEXT_PUBLIC_APP_URL=http://localhost:3001
NEXT_PUBLIC_APP_VERSION=6.52.0
NEXT_PUBLIC_APP_NAME=智游助手v6.52-preview

# ============= AI服务配置 (必需) =============
# DeepSeek直接API (主链路)
DEEPSEEK_API_KEY=sk-your-deepseek-api-key-here
DEEPSEEK_API_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL_NAME=deepseek-chat

# 硅基流动API (应急链路)
SILICONFLOW_API_KEY=sk-your-siliconflow-api-key-here
SILICONFLOW_BASE_URL=https://api.siliconflow.cn/v1
SILICONFLOW_DEEPSEEK_MODEL=deepseek-ai/DeepSeek-V3

# ============= 高德MCP服务配置 =============
# 高德MCP官方服务端点
AMAP_MCP_API_KEY=your-amap-api-key-here
AMAP_MCP_SERVER_URL=https://mcp.amap.com/sse
MCP_AMAP_ENABLED=true

# ============= 腾讯地图MCP服务配置 =============
TENCENT_MCP_API_KEY=your-tencent-map-api-key-here
TENCENT_MCP_BASE_URL=https://apis.map.qq.com/mcp
MCP_TENCENT_ENABLED=true

# 数据库配置
DATABASE_URL=sqlite:./data/smart-travel.db
REDIS_URL=redis://localhost:6379

# 安全配置
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Timeline解析架构v2.0配置
TIMELINE_V2_ENABLED=true
TIMELINE_V2_PERCENTAGE=100

# 开发环境配置
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# 监控和日志配置
LOG_LEVEL=info
ENABLE_PERFORMANCE_MONITORING=true
